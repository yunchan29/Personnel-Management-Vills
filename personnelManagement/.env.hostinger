# Application Settings
APP_NAME="Personnel Management System"
APP_ENV=production
APP_KEY=  # Will be generated on server: php artisan key:generate
APP_DEBUG=false  # CRITICAL: Must be false in production
APP_URL=https://villsmanpowerrecruitmentagency.online  # Replace with your actual domain

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error  # Only log errors in production

# Database Configuration (Get from Hostinger cPanel)
DB_CONNECTION=mysql
DB_HOST=localhost  # Usually localhost on Hostinger
DB_PORT=3306
DB_DATABASE=u116501465_my_laravel_db
DB_USERNAME=u116501465_admin
DB_PASSWORD=@Admin142002


# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true  # CRITICAL for security
SESSION_SECURE_COOKIE=true  # CRITICAL: Only send over HTTPS
SESSION_HTTP_ONLY=true  # CRITICAL: Prevent JavaScript access
SESSION_SAME_SITE=lax

# Cache Configuration
CACHE_STORE=database  # Use database for shared hosting
CACHE_PREFIX=personnel_

# Queue Configuration
QUEUE_CONNECTION=database  # Use database queue for shared hosting

# Broadcast & Filesystem
